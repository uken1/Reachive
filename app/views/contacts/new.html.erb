<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<p id="notice"><%= notice %></p>

<h1>お問い合わせ投稿画面</h1>

<%= form_for(@contact, url: confirm_contacts_path) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :名前 %>
  <%= f.text_field :name, class: 'form-control' %>                                                                                   
  <br>
  <%= f.label :メールアドレス %>
  <%= f.text_field :email, class: 'form-control' %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "お問い合わせ投稿画面にもどる", new_contact_path, class: 'btn btn-default btn-sm btn-success' %>

  </div>
</div>